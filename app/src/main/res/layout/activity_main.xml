<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/back15">

    <Button
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:text="Играть!"
        android:id="@+id/b_play"
        android:onClick="onClick"
        android:background="@drawable/testbutton_states"
        android:clickable="true"
        android:enabled="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:text="Выйти"
        android:id="@+id/b_exit"
        android:onClick="onClick"
        android:background="@drawable/testbutton_states"
        android:layout_marginTop="33dp"
        android:clickable="true"
        android:enabled="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:contextClickable="false"
        android:layout_below="@+id/b_play"
        android:layout_alignLeft="@+id/b_play"
        android:layout_alignStart="@+id/b_play" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0.8"
        android:id="@+id/version"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClick" />

    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="5dp"
        android:id="@+id/relativeLayout2">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:id="@+id/ico_levels"
            android:src="@drawable/levels_ico_3"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/coins"
            android:layout_alignRight="@+id/ico_coins"
            android:layout_alignEnd="@+id/ico_coins" />

        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:id="@+id/ico_coins"
            android:src="@drawable/coin_ico_2"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="37dp"
            android:layout_marginEnd="37dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/coins"
            android:textSize="15dp"
            android:layout_alignBottom="@+id/ico_coins"
            android:layout_toLeftOf="@+id/ico_coins"
            android:layout_toStartOf="@+id/ico_coins"
            android:layout_marginRight="3dp"
            android:layout_marginEnd="3dp"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/levels"
            android:textSize="15dp"
            android:layout_alignBottom="@+id/ico_levels"
            android:layout_toLeftOf="@+id/ico_levels"
            android:layout_toStartOf="@+id/ico_levels"
            android:text="" />
    </RelativeLayout>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text=" $ "
        android:id="@+id/magazine"
        android:background="@drawable/testbutton_states"
        android:onClick="onClick"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
