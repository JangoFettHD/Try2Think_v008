<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mikhail.game2.SelectSection"
    android:background="@drawable/back15">

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="МЕНЮ"
        android:id="@+id/b_menu"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:enabled="true"
        android:clickable="true"
        android:contextClickable="false"
        android:background="@drawable/testbutton_states" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="---"
        android:id="@+id/section2"
        android:background="@drawable/testbutton_states"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:onClick="onClick"
        android:layout_centerVertical="true" />

    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="5dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:id="@+id/ico_levels"
            android:src="@drawable/levels_ico_3"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/coins"
            android:layout_alignRight="@+id/ico_coins"
            android:layout_alignEnd="@+id/ico_coins" />

        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:id="@+id/ico_coins"
            android:src="@drawable/coin_ico_2"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="37dp"
            android:layout_marginEnd="37dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/coins"
            android:textSize="15dp"
            android:layout_alignBottom="@+id/ico_coins"
            android:layout_toLeftOf="@+id/ico_coins"
            android:layout_toStartOf="@+id/ico_coins"
            android:layout_marginRight="3dp"
            android:layout_marginEnd="3dp"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/levels"
            android:textSize="15dp"
            android:layout_alignBottom="@+id/ico_levels"
            android:layout_toLeftOf="@+id/ico_levels"
            android:layout_toStartOf="@+id/ico_levels"
            android:text="" />
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="---"
        android:id="@+id/section1"
        android:background="@drawable/testbutton_states"
        android:onClick="onClick"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/section2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
