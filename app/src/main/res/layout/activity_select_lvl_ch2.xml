<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mikhail.game2.SelectLVL_ch2">

    <Button
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="&lt;-"
        android:id="@+id/b_menu"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick_menu"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:enabled="true"
        android:clickable="true"
        android:contextClickable="false"
        android:background="@drawable/testbutton_states" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="2"
        android:id="@+id/b_lvl2"
        android:layout_below="@+id/b_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:onClick="onClick_ch1_lvl2"
        android:visibility="invisible"
        android:background="@drawable/testbutton_states"
        android:clickable="true"
        android:contextClickable="false"
        android:enabled="true"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="1"
        android:id="@+id/b_lvl1"
        android:onClick="onClick_ch1_lvl1"
        android:visibility="invisible"
        android:background="@drawable/testbutton_states"
        android:clickable="true"
        android:contextClickable="false"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:enabled="true"
        android:layout_alignTop="@+id/b_lvl2"
        android:layout_toLeftOf="@+id/b_lvl2"
        android:layout_toStartOf="@+id/b_lvl2"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="3"
        android:id="@+id/b_lvl3"
        android:onClick="onClick_ch1_lvl3"
        android:visibility="invisible"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:enabled="true"
        android:background="@drawable/testbutton_states"
        android:clickable="true"
        android:contextClickable="false"
        android:layout_above="@+id/b_lvl5"
        android:layout_alignLeft="@+id/b_lvl6"
        android:layout_alignStart="@+id/b_lvl6" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="5"
        android:id="@+id/b_lvl5"
        android:visibility="invisible"
        android:background="@drawable/testbutton_states"
        android:enabled="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="true"
        android:contextClickable="false"
        android:layout_below="@+id/b_lvl2"
        android:layout_alignLeft="@+id/b_lvl2"
        android:layout_alignStart="@+id/b_lvl2"
        android:layout_marginTop="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="4"
        android:id="@+id/b_lvl4"
        android:visibility="invisible"
        android:background="@drawable/testbutton_states"
        android:clickable="true"
        android:contextClickable="false"
        android:enabled="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignTop="@+id/b_lvl5"
        android:layout_alignLeft="@+id/b_lvl1"
        android:layout_alignStart="@+id/b_lvl1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="6"
        android:id="@+id/b_lvl6"
        android:visibility="invisible"
        android:enabled="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="true"
        android:background="@drawable/testbutton_states"
        android:layout_alignTop="@+id/b_lvl5"
        android:layout_toRightOf="@+id/b_lvl5"
        android:layout_toEndOf="@+id/b_lvl5"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />
    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="5dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:id="@+id/ico_levels"
            android:src="@drawable/levels_ico_3"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/coins"
            android:layout_alignRight="@+id/ico_coins"
            android:layout_alignEnd="@+id/ico_coins" />

        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:id="@+id/ico_coins"
            android:src="@drawable/coin_ico_2"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="37dp"
            android:layout_marginEnd="37dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/coins"
            android:textSize="15dp"
            android:layout_alignBottom="@+id/ico_coins"
            android:layout_toLeftOf="@+id/ico_coins"
            android:layout_toStartOf="@+id/ico_coins"
            android:layout_marginRight="3dp"
            android:layout_marginEnd="3dp"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/levels"
            android:textSize="15dp"
            android:layout_alignBottom="@+id/ico_levels"
            android:layout_toLeftOf="@+id/ico_levels"
            android:layout_toStartOf="@+id/ico_levels"
            android:text="" />
    </RelativeLayout>

</RelativeLayout>
